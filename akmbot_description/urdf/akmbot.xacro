        <child link="left_steering_hinge" />
        <origin xyz="0.30 0.235 0" />
        <axis xyz="0 0 1" />
        <limit lower="-0.3576" upper="0.3576" effort="5.0" velocity="1000.0"/>
    </joint>
    <xacro:steering_hinge_transmission name="left_steering_hinge" /> 





